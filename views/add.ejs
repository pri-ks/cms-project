<%- include('layouts/header'); -%>
<body>
    <%- include('layouts/head'); -%>
    <%- include('layouts/nav'); -%>
    <div class="container">
      <h1>Create Post</h1>
      <div class="post-form">
        <form name="addForm" method="POST" action="" enctype="multipart/form-data">
            <div class="form-control">
              <label for="title" class="required">Title</label>
              <input type="text" name="title" id="title" placeholder="Enter your title" class="form-input"/>
              <% if(typeof(errors) !='undefined' && errors.title){ %>
                <span class="error-txt">
                   <%= errors.title.msg %>
                </span>
              <% } %>
            </div>
            <div class="form-control">
              <label for="slug" class="required">Slug</label>
              <input type="text" name="slug" id="slug" placeholder="Enter your post slug" class="form-input"/>
              <% if(typeof(errors) !='undefined' && errors.slug){ %>
                <span class="error-txt">
                   <%= errors.slug.msg %>
                </span>
              <% } %>
            </div>
            <div class="form-control">
              <label for="image" class="required">Upload Image</label>
              <input type="file" name="image" id="image" class="form-input"/>
              <% if(typeof(errors) !='undefined' && errors.image){ %>
                <span class="error-txt">
                   <%= errors.image.msg %>
                </span>
              <% } %>
            </div>
            <div class="form-control">
              <label for="content" class="required">Content</label>
              <textarea id="post-content" name="content" placeholder="Write your content here" class="form-input"></textarea>
              <% if(typeof(errors) !='undefined' && errors.content){ %>
                <span class="error-txt">
                   <%= errors.content.msg %>
                </span>
              <% } %>
            </div>
            <input type="submit" value="CREATE" class="form-btn"/>
        </form>
      </div>
    </div>
    <%- include('layouts/site-footer'); -%>
</body>
<%- include('layouts/footer'); -%>